		<artifactId>spring-boot-starter-parent</artifactId>
		<version>3.3.0</version>
		<relativePath/>
	</parent>

	<groupId>com.demo</groupId>
	<artifactId>demo-api-render</artifactId>
	<version>1.0.0</version>
	<name>demo-api-render</name>
	<description>API simple para despliegue en Render</description>

	<properties>
